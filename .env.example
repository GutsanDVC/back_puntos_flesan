# Configuración de base de datos
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fastapi_template

# Configuración del servidor (para despliegue)
SERVER_HOST=127.0.0.1
SERVER_PORT=8001
WORKERS=4

# Configuración de autenticación
AUTH_JWKS_URL=https://your-auth-server.com/.well-known/jwks.json
AUTH_AUDIENCE=your-api-audience
AUTH_ISSUER=https://your-auth-server.com/
SECRET_KEY=your-super-secret-key-change-this-in-production

# Configuración de cookies
COOKIE_NAME=session
COOKIE_SECURE=true
COOKIE_SAMESITE=Lax

# Configuración de logging
LOG_LEVEL=INFO

# Configuración de CORS (separar con comas)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.com

# Configuración de la API
API_V1_PREFIX=/api/v1
PROJECT_NAME=FastAPI Backend Template
VERSION=1.0.0
